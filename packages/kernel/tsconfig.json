{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@stlite/common": ["../common/dist/esm"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["WebWorker", "DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": ["vite/client"]
  },
  "include": ["src", "../../streamlit/frontend/lib/src/**/*.d.ts"],
  "exclude": ["src/*.spec.ts", "src/*.test.ts"],
  "references": [
    { "path": "../common" }
  ]
}
